terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

# Configure the AWS Provider
provider "aws" {
  region = "${region}"
  default_tags {
    tags = {
      "Terraform"   = "true"
      "Environment" = "${env}"
    }
  }
}

provider "aws" {
  alias  = "virginia"
  region = "us-east-1"

  default_tags {
    tags = {
      "Terraform"   = "true"
      "Environment" = "${env}"
    }
  }
}
