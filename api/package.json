{
  "name": "api",
  "type": "module",
  "scripts": {
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node ./src/handler.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name hello",
    "deploy": "run-s build zip update",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "pnpm tsc --noEmit",
    "dev": "tsx watch --env-file=.env src/dev-server.ts",
    "generate-openapi": "tsx src/openapi.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@hono/node-server": "^1.19.6",
    "@types/node": "^24.10.1",
    "@vitest/ui": "4.0.13",
    "esbuild": "^0.27.0",
    "npm-run-all2": "^8.0.4",
    "tsx": "^4.20.6",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.936.0",
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/lib-dynamodb": "^3.936.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "@hono/zod-validator": "^0.7.5",
    "hono": "^4.10.6",
    "zod": "^4.1.13"
  }
}
